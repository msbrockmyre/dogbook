<div class="panel panel-primary" style="border-color: green;">
<div class="panel-heading" style= "background-color: lightgray; border-color: white;">
          <h3 class="panel-title" style="color: green;">
               Upload a Dog!
          </h3>
     </div>

     <form method="post" action="/images" enctype="multipart/form-data">
          <div class="panel-body form-horizontal">
               <div class="form-group col-md-12">
                    <label class="col-sm-2 control-label" for="file" style="color: green;" >
                         Browse:
                    </label>
                    <div class="col-md-10">
                         <input class="form-control" type="file" name="file" id="file">
                    </div>
               </div>
               <div class="form-group col-md-12">
                    <label class="col-md-2 control-label" for="title" style="color: green;">
                         Dog Name:
                    </label>
                    <div class="col-md-10">
                         <input class="form-control" type="text" name="title">
                    </div>
               </div>
               <div class="form-group col-md-12">
                    <label class="col-md-2 control-label" for="description" style="color: green;">
                         Description of your dog:
                    </label>
                    <div class="col-md-10">
                         <textarea class="form-control" name="description" rows="2"></textarea>
                    </div>
               </div>
               <div class="form-group col-md-12">
                    <div class="col-md-12 text-right">
                         <button type="submit" id="login-btn" class="btn btn-success" type="button">
                              <i class="fa fa-cloud-upload"></i>
                              Upload
                         </button>
                    </div>
               </div>
          </div>
     </form>
</div>

<div class="panel panel-default" length: 100%;">
    <div class="panel-heading" style="background-color: lightgray;">
        <h3 class="panel-title" style="color: green;">
            Highest Rated Dogs
        </h3>
    </div>
    <div class="panel-body">
        {{#each sidebar.popular}}
            <div class="col-md-4 text-center" style="padding-bottom: .5em;"><a href="/images/{{uniqueId}}"><img src="/public/upload/{{filename}}" style="width: 300px; height: 225px; margin: 10px 10px 10px 10px;" class="img-thumbnail"></a></div>
        {{/each}}
    </div>
</div>